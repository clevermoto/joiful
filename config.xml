    <icon src="assets/lib/phonegap/icons/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi"/>
    <icon src="assets/lib/phonegap/icons/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi"/>

