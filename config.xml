<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="com.tatbeq.joiful"
        version="1.42">
  <name>Joiful</name>
  <description>Description</description>
  <author href="http://joiful.com" email="carl@joiful.com">Joiful Team</author>
  <preference name="permissions" value="none"/>
  <access origin="http://phonegap.com" subdomains="true" />
  <access origin="*" subdomains="true" />
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="android-minSdkVersion" value="15"/>
  <preference name="orientation" value="portrait" />
  <plugin name="cordova-plugin-googleplus" source="npm" >
    <param name="REVERSED_CLIENT_ID" value="com.googleusercontent.apps.486513408762-gi9o06ehcuphna1kj9ca19ch7un04to7" />
  </plugin>
  <preference name="target-device" value="handset" />
  <plugin name="cordova-plugin-facebook4" source="npm" >
    <!-- <param name="APP_ID" value="630094987164718" /> -->
  <param name="APP_ID" value="1847821442155336" />
  <param name="APP_NAME" value="joiful-test" />
  </plugin>
  <plugin name="card.io.cordova.mobilesdk" source="npm"  />
  <plugin name="mp-cordova-plugin-contacts" source="npm"/>
  <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1"/>
  <plugin name="cordova-plugin-device-motion" source="npm" spec="~1.2.0"/>
  <plugin name="cordova-plugin-device-orientation" source="npm" spec="~1.0.2"/>
  <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0"/>  
  <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0"/>
  <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.0"/>
  <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1"/>
  <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2">

  </plugin>
  <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1"/>
  <plugin name="cordova-sms-plugin" source="npm" />
  <plugin name="cordova-plugin-phonecaller" source="npm" />
  <plugin name="cordova-plugin-media-capture" source="npm" spec="*">
  <variable name="CAMERA_USAGE_DESCRIPTION" value="Joiful would like to access the camera." />
  <variable name="MICROPHONE_USAGE_DESCRIPTION" value="Joiful would like to access the microphone." />
  <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Joiful would like to access the library." />
</plugin>
  <plugin name="cordova-plugin-x-socialsharing" source="npm">
  </plugin>
  <plugin name="pushwoosh-pgb-plugin" source="npm">
    <param name="IOS_FOREGROUND_ALERT_TYPE" value="ALERT" />
    <param name="ANDROID_FOREGROUND_PUSH" value="true" />
  </plugin>
  <plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" source="npm"/>
  <icon src="icon.png"/>
   <platform name="android">  
    <icon src="assets/lib/phonegap/icons/android/mipmap-ldpi/ic_launcher.png" density="ldpi"/>
    <icon src="assets/lib/phonegap/icons/android/mipmap-mdpi/ic_launcher.png" density="mdpi"/>
